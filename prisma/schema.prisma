generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model user {
  id            String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  login         String
  username      String
  password      String @default("")
  role          String @default("MANAGER")
  post          String
}

